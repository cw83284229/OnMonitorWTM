@page "/Repair/CameraRepair/Create"
@using OnMonitor.ViewModel.Repair.CameraRepairVMs;
@using OnMonitor.Shared.Pages.DVROperation;
@inherits BasePage

<ValidateForm @ref="vform"  Model="@Model" OnValidSubmit="@Submit" >

    <Row ItemsPerRow="ItemsPerRow.One" RowType="RowType.Normal">
        <ValidationSummary></ValidationSummary>
        <ValidationMessage For="()=>Model.Camera_ID"></ValidationMessage>
        <AutoComplete IgnoreCase="true" NoDataTip="没有此镜头或异常未处理" OnValueChanged="@OnValueChanged"  @bind-Value="@Model.Camera_ID" Items="@CameraText" ></AutoComplete>
        <BootstrapInput @bind-Value="@Model.Entity.CollectTime" />
        <Select @bind-Value="@Model.Entity.AnomalyType" PlaceHolder="@WtmBlazor.Localizer["Sys.PleaseSelect"]" />
        <Select @bind-Value="@Model.Entity.AnomalyGrade" PlaceHolder="@WtmBlazor.Localizer["Sys.PleaseSelect"]" />
        <BootstrapInput @bind-Value="@Model.Entity.Registrar" />


        <BootstrapInput @bind-Value="@Model.Entity.Remark" />
    </Row>
    <div class="modal-footer table-modal-footer">
        <Button Color="Color.Primary" Icon="fa fa-save" Text="@WtmBlazor.Localizer["Sys.Close"]" OnClick="OnClose" />
        <Button Color="Color.Primary" Text="查看监控" OnClick="()=>CameraPictrue(Model.Camera_ID)" />
        <Button Color="Color.Primary" ButtonType="ButtonType.Submit" Icon="fa fa-save" Text="确定" IsAsync="true"  @ref="IsSubmitDisable" />
    </div>
  
</ValidateForm>

